<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".RegistroActivity">

    <Button
        android:id="@+id/btnVolver3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Volver"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="620dp" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registro de Usuario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Nombre"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvGryffindor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prioridad Gryffindor (1-4)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etContrasena"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <SeekBar
        android:id="@+id/sliderGryffindor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="3"
        android:progress="0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvGryffindor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSlytherin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prioridad Slytherin (1-4)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/sliderGryffindor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:id="@+id/sliderSlytherin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="3"
        android:progress="0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSlytherin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvRavenclaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prioridad Ravenclaw (1-4)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/sliderSlytherin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:id="@+id/sliderRavenclaw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="3"
        android:progress="0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvRavenclaw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvHufflepuff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prioridad Hufflepuff (1-4)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/sliderRavenclaw"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:id="@+id/sliderHufflepuff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="3"
        android:progress="0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvHufflepuff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btRegistrar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Registrar"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/sliderHufflepuff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>